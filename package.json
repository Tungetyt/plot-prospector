{
  "name": "plot-prospector",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "docker:build": "docker-compose up -d --build",
    "docker:build-prod": "docker compose -f \"docker-compose.prod.yml\" up -d --build",
    "prisma:migrate": "docker-compose exec next-js npx prisma migrate dev && npx prisma generate",
    "prisma:studio": "docker-compose exec next-js npx prisma studio",
    "lint": "next lint",
    "format": "pnpm exec prettier . --write",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky install"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.0.0",
    "@types/node": "20.4.5",
    "@types/react": "18.2.17",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "10.4.14",
    "eslint-config-next": "13.4.12",
    "next": "13.4.12",
    "next-auth": "^4.22.3",
    "postcss": "8.4.27",
    "prisma": "^5.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.3.3",
    "typescript": "5.1.6"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@total-typescript/ts-reset": "^0.4.2",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/coverage-istanbul": "^0.33.0",
    "eslint": "8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-json": "^3.1.0",
    "husky": "^8.0.0",
    "jsdom": "^22.1.0",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "vitest": "^0.33.0"
  }
}
